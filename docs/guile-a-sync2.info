          (a-sync (lambda (await resume)
          	  (display "Enter lines of text at the keyboard, enter an empty line to finish\n")
          	  (let ((port (open "/dev/tty" O_RDONLY)))
          	    (await-getsomelines! await resume
          				 port
          				 (lambda (line k)
