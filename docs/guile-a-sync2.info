          	  (let ((port (open "/dev/tty" O_RDONLY)))
          	    (await-geteveryline! await resume
          				 port
          				 (lambda (line)
          				   (simple-format #t
          						  "The line was: ~A\n"
          						  line))))))
          (event-loop-run!)

